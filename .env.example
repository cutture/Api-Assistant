# ===========================================
# API Assistant - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ----- LLM Configuration -----
# LLM Provider: "ollama" (local) or "groq" (cloud)
LLM_PROVIDER=ollama

# Ollama (Local - Default)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-coder:6.7b

# Groq (Cloud - Fast API)
# Get your free API key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
# Groq models for different agent types (all use llama-3.3-70b-versatile by default)
GROQ_REASONING_MODEL=llama-3.3-70b-versatile  # For planning & analysis
GROQ_CODE_MODEL=llama-3.3-70b-versatile       # For code generation
GROQ_GENERAL_MODEL=llama-3.3-70b-versatile    # For general tasks

# ----- Embedding Configuration -----
# Using local sentence-transformers model (no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ----- Vector Database -----
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=api_docs

# ----- Application Settings -----
APP_NAME=API Integration Assistant
DEBUG=false
LOG_LEVEL=INFO

# ----- Upload Settings -----
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=json,yaml,yml,md,txt

# ----- Web Search Fallback -----
# Enable web search when vector store results are insufficient
ENABLE_WEB_SEARCH=true
# Minimum relevance score before triggering web search fallback (0.0-1.0)
WEB_SEARCH_MIN_RELEVANCE=0.5
# Maximum number of web search results to fetch
WEB_SEARCH_MAX_RESULTS=5

# ----- Security Configuration -----
# CRITICAL: Generate unique secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-CHANGE-THIS-IN-PRODUCTION

# CORS Origins - Allowed origins for cross-origin requests
# Development: http://localhost:3000,http://localhost:3001
# Production: https://your-frontend-domain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Authentication
# Set to true in production to require API keys
REQUIRE_AUTH=false
# API Keys - Generate with: python -c "import secrets; print(f'api-key-{secrets.token_urlsafe(32)}')"
# Comma-separated list for multiple keys
API_KEYS=
