# ===========================================
# API Assistant - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ----- LLM Configuration -----
# LLM Provider: "ollama" (local) or "groq" (cloud)
LLM_PROVIDER=ollama

# Ollama (Local - Default)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-coder:6.7b

# Groq (Cloud - Fast API)
# Get your free API key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
# Groq models for different agent types
GROQ_REASONING_MODEL=deepseek-r1-distill-llama-70b  # For planning & analysis
GROQ_CODE_MODEL=llama-3.3-70b-versatile             # For code generation
GROQ_GENERAL_MODEL=llama-3.3-70b-versatile          # For general tasks

# ----- Embedding Configuration -----
# Using local sentence-transformers model (no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ----- Vector Database -----
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=api_docs

# ----- Application Settings -----
APP_NAME=API Integration Assistant
DEBUG=false
LOG_LEVEL=INFO

# ----- Upload Settings -----
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=json,yaml,yml,md,txt
